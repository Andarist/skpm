{
  "name": "@skpm/test-runner",
  "version": "0.3.0",
  "description": "A test runner for sketch plugins",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "skpm-test": "lib/test.js"
  },
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "lib",
    "test-runner.sketchplugin"
  ],
  "scripts": {
    "prebuild": "../../node_modules/.bin/rimraf lib",
    "build": "../../node_modules/.bin/babel src -d lib -D",
    "watch": "npm run build -- --watch",
    "prepare": "npm run -s build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skpm/skpm.git"
  },
  "keywords": [
    "sketch",
    "cocoascript",
    "javascript",
    "babel",
    "skpm",
    "test"
  ],
  "author": "Mathieu Dutour <mathieu@dutour.me> (http://mathieu.dutour.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skpm/skpm/issues"
  },
  "homepage": "https://github.com/skpm/skpm#readme",
  "dependencies": {
    "@skpm/builder": "^0.4.1",
    "@skpm/internal-utils": "^0.1.7",
    "@skpm/util": "^0.1.8",
    "chalk": "^1.1.3",
    "chokidar": "^2.0.3",
    "globby": "^8.0.1",
    "is-ci": "^1.0.10",
    "minimatch": "^3.0.4",
    "sketch-utils": "^0.1.2",
    "source-map": "^0.7.2",
    "strip-ansi": "^4.0.0",
    "webpack": "^4.5.0",
    "yargs": "^9.0.1"
  }
}
